# Auto detect text files and perform LF normalization
* text=auto

# Ensure shell scripts are treated as text and use LF line endings
*.sh text eol=lf

# Ensure Python files are treated as text and use LF line endings
*.py text eol=lf

# Ensure YAML files are treated as text and use LF line endings
*.yml text eol=lf
*.yaml text eol=lf

# Ensure JSON files are treated as text and use LF line endings
*.json text eol=lf

# Ensure Markdown files are treated as text and use LF line endings
*.md text eol=lf

# Ensure configuration files are treated as text and use LF line endings
*.cfg text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Ensure Docker files are treated as text and use LF line endings
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Ensure Makefile is treated as text and uses LF line endings
Makefile text eol=lf

# Ensure SQL files are treated as text and use LF line endings
*.sql text eol=lf

# Ensure Terraform files are treated as text and use LF line endings
*.tf text eol=lf
*.tfvars text eol=lf

# Binary files that should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.jar binary
*.class binary

# Data files that should be treated as binary
*.parquet binary
*.feather binary
*.arrow binary
*.h5 binary
*.hdf5 binary

# Ensure Windows users don't accidentally commit CRLF
*.bat text eol=crlf

# Export-ignore files for GitHub archive generation
/.github export-ignore
/docs export-ignore
/tests export-ignore
/scripts export-ignore

# Linguist overrides for GitHub language detection
# This helps GitHub correctly identify the primary language
mage_pipeline/* linguist-language=Python
*.py linguist-language=Python
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
*.md linguist-language=Markdown
*.sh linguist-language=Shell
Dockerfile linguist-language=Dockerfile
Makefile linguist-language=Makefile